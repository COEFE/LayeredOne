{
  "version": 2,
  "buildCommand": "node ./fix-next-font.js && ./fix-firebase-vercel.sh && node scripts/vercel-deploy.js && SIMPLE_PDF=true npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["sfo1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "VERCEL": "true",
    "NEXT_PUBLIC_VERCEL_DEPLOYMENT": "true",
    "NEXT_PUBLIC_USE_REAL_FIREBASE": "true",
    "FIREBASE_USE_PRODUCTION_CONFIG": "true",
    "SIMPLE_PDF": "true"
  },
  "cleanUrls": true,
  "trailingSlash": false
}